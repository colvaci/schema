{
  "$id": "https://github.com/colvaci/schema/v1/colvaci.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ColVaci - Collection of Job Vacancies",
  "type": "object",
  "properties": {
    "jobTitle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "language": {
      "description": "Language of the vacancy in ISO 639-1:2002. See https://en.wikipedia.org/wiki/List_of_ISO_639_language_codes",
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "jobDescription": {
      "description": "Description of the vacancy",
      "type": "string",
      "maxLength": 1000
    },
    "jobType": {
      "type": "array",
      "items": {
        "type": "string",
      }
    },
    "tags": {
      "description": "Key words for the vacancy",
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 28
      },
      "maxItems": 8,
      "uniqueItems": true
    },
    "country": {
      "description": "Country code as ISO 3166-1 alpha-2: see https://en.wikipedia.org/wiki/ISO_3166-1_alpha-2",
      "type": "string",
      "minLength": 2
      "maxLength": 2
    },
    "jobUrl": {
      "description": "URL of the vacancy's full description",
      "type": "string",
      "format": "uri",
  },
  "required": ["jobTitle", "jobType", "language", "country", "jobUrl"],
  "additionalProperties": false
}
